# Development Environment with Mock Services
# This file is for local development without real API credentials

# Node Environment
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Mock Database (use SQLite for local dev)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/beep_chatbot_dev

# Mock Redis (use local Redis)
REDIS_URL=redis://localhost:6379

# Mock Intercom Configuration
INTERCOM_ACCESS_TOKEN=mock_token_for_development
INTERCOM_BOT_ADMIN_ID=123456
WEBHOOK_SECRET=development_secret_123
SUPPORT_TEAM_ID=789012

# Mock API URLs (pointing to mock server)
LALAMOVE_API_KEY=mock_lalamove_key
LALAMOVE_API_SECRET=mock_lalamove_secret
FOODPANDA_API_URL=http://localhost:4000
FOODPANDA_API_KEY=mock_foodpanda_key
IST_API_URL=http://localhost:4000
IST_API_KEY=mock_ist_key

# Feature Flags
ENABLE_LALAMOVE=true
ENABLE_FOODPANDA=true
ENABLE_CACHE=true
CACHE_TTL_SECONDS=60

# Performance Settings
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MS=10000
API_TIMEOUT_MS=3000

# Development Settings
MOCK_MODE=true
MOCK_PORT=4000