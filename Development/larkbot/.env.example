# Example Environment Variables
# Copy this file to .env and fill in your actual values

# Intercom Configuration
INTERCOM_TOKEN=your_intercom_access_token_here
INTERCOM_APP_ID=your_intercom_app_id_here
INTERCOM_WEBHOOK_SECRET=your_intercom_webhook_secret_here

# Lark Suite Configuration
LARK_APP_ID=your_lark_app_id_here
LARK_APP_SECRET=your_lark_app_secret_here
LARK_WEBHOOK_SECRET=your_lark_webhook_secret_here
LARK_CHAT_GROUP_ID=your_lark_chat_group_id_here

# Multiple Lark Groups (optional)
LARK_CHAT_GROUP_ID_COMPLEX_SETUP=group_id_for_complex_setup
LARK_CHAT_GROUP_ID_MYPHFE=group_id_for_myphfe

# Application Configuration
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Security
WEBHOOK_SECRET=generate_a_strong_webhook_secret

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_CHATBOT=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true
DEBUG_MODE=false